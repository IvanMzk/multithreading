{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake generate",
            "command": "cmake.exe -DCMAKE_BUILD_TYPE=Release -G \"Ninja\" -S ${workspaceFolder} -B ${workspaceFolder}\\build",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cmake build Test",
            "command": "cmake.exe --build ${workspaceFolder}\\build --target Test",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run tests",
            "command": "${workspaceFolder}\\build\\test\\Test.exe",
            "args": [],
            "group": "test"
        },
        {
            "label":"Tests build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test","Run tests"],
            "group": "test"
        }
    ]
}