{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "cmake generate",
            "command": "cmake -DCMAKE_BUILD_TYPE=Release -S ${workspaceFolder} -B ${workspaceFolder}/build -GNinja -DBUILD_TEST=ON",
            "args": [],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "cmake build Test",
            "command": "cmake --build ${workspaceFolder}/build --target Test",
            "args": [],
            "group": "test"
        },
        {
            "type": "shell",
            "label": "Run tests",
            "command": "${workspaceFolder}/build/test/Test",
            "args": [],
            "group": "test"
        },
        {
            "label":"Tests build & run",
            "dependsOrder": "sequence",
            "dependsOn":["cmake generate","cmake build Test","Run tests"],
            "group": "test"
        }
    ]
}